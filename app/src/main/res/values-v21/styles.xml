<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTheme" parent="android:Theme.Material.Light">
        <!-- Colors -->
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:colorBackground">@color/cirkle_bg</item>
        <item name="android:textColorPrimary">@color/cirkle_bg</item>

        <!-- Controls -->
        <item name="android:textAppearanceButton">@style/AppButton</item>
        <item name="android:editTextStyle">@style/AppTextEdit</item>
        <item name="android:listViewStyle">@style/AppListView</item>
        <item name="android:textViewStyle">@style/AppTextView</item>
        <item name="android:autoCompleteTextViewStyle">@style/AppAutoComplete</item>

    </style>

    <style name="AppTheme" parent="MainTheme">
        <item name="android:colorButtonNormal">@color/cirkle_primary</item>
        <item name="android:colorPrimary">@color/cirkle_primary</item>
    </style>

    <style name="AppButton" parent="android:TextAppearance.Material.Button">
    </style>

    <style name="AppTextEdit" parent="android:Widget.Material.Light.EditText">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/text_edit</item>
        <item name="android:textColor">@color/cirkle_primary</item>
    </style>

    <style name="AppAutoComplete" parent="android:Widget.Material.Light.AutoCompleteTextView">
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">@drawable/text_edit</item>
        <item name="android:textColor">@color/cirkle_primary</item>
    </style>

    <style name="AppTextView" parent="android:Widget.Material.Light.TextView">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/cirkle_primary</item>
    </style>

    <style name="AppListView" parent="android:Widget.Material.Light.ListView">
        <item name="android:padding">10dp</item>
        <item name="android:itemBackground">@color/cirkle_primary</item>
    </style>
</resources>
